# Koyeb-specific environment variables
# Copy this file to .env and update the values

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration
# Koyeb will automatically set DATABASE_URL for PostgreSQL
# DATABASE_URL=postgresql://username:password@host:port/database

# Security
BEARER_TOKEN=your-secret-token-here

# Koyeb-specific
# These will be automatically provided by Koyeb
# kooyeb_database_url=postgresql://...
# kooyeb_bearer_token=your-generated-token
